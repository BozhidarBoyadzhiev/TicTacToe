@using Microsoft.AspNetCore.Mvc.TagHelpers
@model TicTacToe.Presentation.Models.ViewModels.LeaderboardViewModel

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="mb-3">Tic Tac Toe Leaderboard</h1>

        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary mb-4">
            Back to Home
        </a>
    </div>

    <div class="row">
        <div class="col-md-8" style="flex: 0 0 65%; max-width: 65%;">
            <h2 class="text-center mb-3">Player VS Computer</h2>

            <table class="table table-striped table-hover fs-6">
                <thead class="table-dark">
                <tr>
                    <th>Rank</th>
                    <th>Player</th>
                    <th>Wins</th>
                    <th>Losses</th>
                    <th>Draws</th>
                    <th>Total</th>
                    <th>Win Rate</th>
                </tr>
                </thead>
                <tbody>
                @{ int rank = 1; }
                @foreach (var player in Model.ComputerPlayerStats)
                {
                    <tr>
                        <td>@(rank++)</td>
                        <td>
                            <span class="badge" style="background-color: @player.PlayerColor;">
                                @player.PlayerName
                            </span>
                        </td>
                        <td>@player.Wins</td>
                        <td>@player.Losses</td>
                        <td>@player.Draws</td>
                        <td>@player.TotalGames</td>
                        <td>@player.WinPercentage.ToString("0.0")%</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>

        <div class="col-md-4" style="flex: 0 0 35%; max-width: 35%;">
            <h2 class="text-center mb-3">Player VS Player</h2>

            <table class="table table-striped table-hover fs-6">
                <thead class="table-dark">
                <tr>
                    <th>Rank</th>
                    <th>Player</th>
                    <th>Wins</th>
                    <th>Losses</th>
                    <th>Draws</th>
                    <th>Total</th>
                    <th>Win Rate</th>
                </tr>
                </thead>
                <tbody>
                @{ int rankMulti = 1; }
                @foreach (var player in Model.MultiplayerStats)
                {
                    <tr>
                        <td>@(rankMulti++)</td>
                        <td>
                            <span class="badge" style="background-color: @player.PlayerColor;">
                                @player.PlayerName
                            </span>
                        </td>
                        <td>@player.Wins</td>
                        <td>@player.Losses</td>
                        <td>@player.Draws</td>
                        <td>@player.TotalGames</td>
                        <td>@player.WinPercentage.ToString("0.0")%</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>