<div class="mt-5">
    <h4>Game History</h4>
    <div class="table-responsive">
        <table class="table table-striped table-hover mt-3">
            <thead class="table-dark">
            <tr>
                <th>Date</th>
                <th>Player</th>
                <th>Color</th>
                <th>Result</th>
            </tr>
            </thead>
            <tbody id="history-body">
            <!-- Data will be loaded here -->
            </tbody>
        </table>
    </div>
    
    <div class="d-flex justify-content-center mt-3">
        <nav>
            <ul class="pagination">
                <li class="page-item">
                    <button class="page-link"
                            id="prev-page"
                            onclick="previousPage()"
                            disabled>
                        &laquo; Previous
                    </button>
                </li>
                <li class="page-item">
                    <span class="page-link" id="current-page">Page 1</span>
                </li>
                <li class="page-item">
                    <button class="page-link"
                            id="next-page"
                            onclick="nextPage()"
                            disabled>
                        Next &raquo;
                    </button>
                </li>
            </ul>
        </nav>
    </div>
</div>