@{
    Layout = "_Layout";
}

<div class="text-center">
    <h2>Welcome to Tic Tac Toe</h2>
    <p>Choose a mode to start playing:</p>
    <a asp-action="Computer" asp-controller="Computer" class="btn btn-primary me-2">Player VS Computer</a>
    <a asp-action="Multiplayer" asp-controller="Multiplayer" class="btn btn-secondary me-2">Player VS Player</a>
    <a asp-action="Leaderboard" asp-controller="Home" class="btn btn-info">Leaderboard</a>
</div>
