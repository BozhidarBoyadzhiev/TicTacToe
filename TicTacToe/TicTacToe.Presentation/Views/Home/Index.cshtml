@{
    Layout = "_Layout";
}

<div class="text-center">
    <h2>Welcome to Tic Tac Toe</h2>
    <p>Choose a mode to start playing:</p>
    <a asp-action="Computer" asp-controller="Home" class="btn btn-primary me-2">Play with Computer</a>
    <a asp-action="Multiplayer" asp-controller="Home" class="btn btn-secondary me-2">Multiplayer</a>
    <a asp-action="Leaderboard" asp-controller="Home" class="btn btn-info">Leaderboard</a>
</div>
